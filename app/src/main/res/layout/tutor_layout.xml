<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="366dp"
        android:layout_height="575dp"
        android:layout_gravity="center"
        android:layout_marginTop="110dp"
        tools:context=".Register">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutnomTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextNomTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nom i Cognoms"
                android:importantForAccessibility="no"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutDniTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutnomTutor"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextDniTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Dni"
                android:importantForAccessibility="no"
                android:inputType="textPersonName" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutTelefonTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutDniTutor"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextTelefonTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telefon"
                android:importantForAccessibility="no"
                android:inputType="phone" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutCorreuTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutTelefonTutor"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextCorreuTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Correu Electronic"
                android:importantForAccessibility="no"
                android:inputType="textEmailAddress" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutContrasenyaTutor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutCorreuTutor"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextContrasenyaTutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contrasenya"
                android:importantForAccessibility="no"
                android:inputType="textPassword" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textInputLayoutIdentificador"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayoutContrasenyaTutor"
            app:layout_constraintWidth_default="spread">

            <EditText
                android:id="@+id/editTextTextIdentificador"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Identificador usuari"
                android:importantForAccessibility="no"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
